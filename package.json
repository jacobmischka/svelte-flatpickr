{
	"name": "svelte-flatpickr",
	"version": "3.3.4",
	"description": "Flatpickr component for Svelte",
	"homepage": "https://github.com/jacobmischka/svelte-flatpickr",
	"repository": "https://github.com/jacobmischka/svelte-flatpickr.git",
	"author": "Jacob Mischka <jacob@mischka.me>",
	"license": "MIT",
	"type": "module",
	"types": "dist/types.d.ts",
	"svelte": "./dist/Flatpickr.svelte",
	"exports": {
		".": {
			"types": "./dist/types.d.ts",
			"svelte": "./dist/Flatpickr.svelte"
		},
		"./package.json": "./package.json"
	},
	"scripts": {
		"build": "svelte-package --input ./src && publint --strict",
		"prepublishOnly": "npm run build",
		"format": "prettier --write ./src/* ./test/src/*"
	},
	"devDependencies": {
		"@sveltejs/package": "^2.2.5",
		"prettier": "^3.0.0",
		"prettier-plugin-svelte": "^3.0.3",
		"publint": "^0.2.7",
		"svelte": "^4.0.0"
	},
	"dependencies": {
		"flatpickr": "^4.5.2"
	},
	"peerDependencies": {
		"svelte": ">= 3.31.0 < 5.0"
	},
	"files": [
		"dist",
		"src"
	]
}
